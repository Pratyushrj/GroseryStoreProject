@model GroseryStoreProjectMVC.Models.TblContact
@{
    ViewBag.Title = "Contact";
}

<div class="mail">
    <h3>Mail Us</h3>
    <div class="agileinfo_mail_grids">
        <div class="col-md-4 agileinfo_mail_grid_left">
            <ul>
                <li><i class="fa fa-home" aria-hidden="true"></i></li>
                <li>02,AshavMegh Apartment<span>Bhavanagar City,India.</span></li>
            </ul>
            <ul>
                <li><i class="fa fa-envelope" aria-hidden="true"></i></li>
                <li>email<span><a href="#">grosarystor111@gmail.com.com</a></span></li>
            </ul>
            <ul>
                <li><i class="fa fa-phone" aria-hidden="true"></i></li>
                <li>call to us<span>(+91) 9685968596</span></li>
            </ul>
        </div>
        <div class="col-md-8 agileinfo_mail_grid_right">
            <form action="#" method="post">
                <div class="col-md-6 wthree_contact_left_grid">
                    <div>
                        <lable>Name</lable>
                        <a>@Html.TextBoxFor(m => m.name)</a>
                    </div>
                    <div>
                        <lable>email</lable>
                        <a>@Html.TextBoxFor(m => m.email)</a>
                    </div>
                </div>
                <div class="col-md-6 wthree_contact_left_grid">
                    <div>
                        <lable>Subject</lable>
                        <a>@Html.TextBoxFor(m => m.subject)</a>
                    </div>
                </div>

                <div class="clearfix"> </div>
                <div>
                    <lable>Message</lable>
                    <a>@Html.TextAreaFor(m => m.message)</a>
                </div>
                <input type="submit" id="btnSend" value="Send">
                <input type="reset" value="Clear">
            </form>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>

